<!DOCTYPE html>
<html lang="en">

<head>
    <title>Search by tags</title>
    <link rel="icon" href="/img/icons/mal-logo-head.png">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="search-by-tags">
        <%- include('../partials/header.ejs') %>


            <!-- if there is no search result -->
            <% if( typeof animes !=="undefined" ) { %>
                <p style="color: rgb(37, 37, 87); font-weight: bolder;">Search results</p>
                <ul>
                    <% for (let anime of animes){ %>
                        <li> <a class="listed-anime" href=<%="/anime/" + anime.ANIME_ID %> > <%= anime.ANIME_TITLE %>
                            </a></li>
                        <% } %>
                </ul>
                <% } %>



                    <form action="/searchtags" method="post">
                        <h3 style="color: rgb(37, 37, 87);">Select tags you want to search</h3>
                        <div>
                            <% for (let genre of genres){ %>
                                <input class="tags-genre" type="checkbox" id="tag[]" name="genres"
                                    value=<%=genre.GENRE_NAME %>>
                                <label for="tag[]">
                                    <%= genre.GENRE_NAME %>
                                </label><br>
                                <% } %>
                        </div>
                        <h3 style="color: rgb(37, 37, 87);">Select year you want to search</h3>
                        <div>
                            <% for (let year of years){ %>
                                <input class="tags-year" type="checkbox" id="yr" name="years" value=<%=year %> >
                                <label for="yr">
                                    <%= year %>
                                </label><br>
                                <% } %>
                        </div>
                        <br>
                        <input type="submit" value="Search" style="background-color: rgb(161, 161, 204);">
                    </form>


    </div>
    <%- include('../partials/footer.ejs') %>
</body>

</html>